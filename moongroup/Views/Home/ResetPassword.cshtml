@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zxx">
<head>
    <!-- End Google Tag Manager -->
    <title>Deep Tech - Reset Password Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <!-- External CSS libraries -->
    <link type="text/css" rel="stylesheet" href="/login-assets/css/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="/login-assets/fonts/font-awesome/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="/login-assets/fonts/flaticon/font/flaticon.css">

    <!-- Favicon icon -->
    <link rel="shortcut icon" href="~/images.jpg" type="image/x-icon">

    <!-- Google fonts -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800%7CPoppins:400,500,700,800,900%7CRoboto:100,300,400,400i,500,700">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;600;700;800;900&amp;display=swap" rel="stylesheet">

    <!-- Custom Stylesheet -->
    <link type="text/css" rel="stylesheet" href="/login-assets/css/style.css">
    <link rel="stylesheet" type="text/css" id="style_sheet" href="/login-assets/css/skins/default.css">
</head>
<body id="top">
    <div class="page_loader"></div>
    <!-- Login 23 start -->
    <div class="login-23 tab-box">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-pad-0 form-section">
                    <div class="login-inner-form">
                        <div class="details">
                            <a href="#">
                                <img src="~/images.jpg" />
                            </a>
                            <h3>Reset Password</h3>
                            <form action="/Home/ResetPassword" method="Post" class="form-horizontal">
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <input type="hidden" id="Code" value="@ViewBag.Code" name="Code" />
                                <input type="hidden" id="Email" value="@ViewBag.Email" name="Email" />
                                <div class="mb-3">
                                    <label for="password" class="form-label">New Password</label>
                                    <input type="password" class="form-control" id="password" name="NewPassword" placeholder="Enter password">
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn-md btn-theme w-100">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Login 13 end -->
    <!-- External JS libraries -->
    <script src="/login-assets/js/jquery.min.js"></script>
    <script src="/login-assets/js/popper.min.js"></script>
    <script src="/login-assets/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS Script -->

</body>
</html>